/**
 * 
 */
package com.pramati.imaginea.bObj;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

import com.pramati.imaginea.Entities.mail;

/**
 * @author anandu
 *
 */
public class Saver implements Runnable{
	
	private File Directory;
	private mail email;
	/**
	 * 
	 */
	public Saver(File file,mail pmail) {
		this.Directory = file;
		this.email = pmail;
	}

	@Override
	public void run() {
		
		try {
			File lFile = new File(Directory, email.getFrom());
			lFile.createNewFile();
			FileWriter lWriter = new FileWriter(lFile.getAbsoluteFile());
			BufferedWriter lBuffer = new BufferedWriter(lWriter);
			lBuffer.write(email.getDate());
			lBuffer.write("\n");
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
